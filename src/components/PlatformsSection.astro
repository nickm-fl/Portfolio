---
import PlatformsShowcase from "./PlatformsShowcase.astro";
import NodeSphere from "../React/NodeSphere.tsx";
---

<section class="text-[var(--white)] bg-transparent" id="platforms">
  <div class="max-w-5xl mx-auto space-y-8 py-14">
    <div class="flex flex-col lg:flex-row-reverse items-center gap-8">
      <PlatformsShowcase />
      <div class="flex justify-center w-[375px] h-[375px] md:w-[500px] md:h-[500px] pt-3 md:pt-9">
        <NodeSphere client:load
          nodeCount={50}
          radius={30}
          backgroundColor="transparent"
          nodeColor="#A476FF"
          activeNodeColor="#ffffff"
          rotationSpeed={0.001}
          connectionOpacity={0.2}
        />
      </div>
    </div>
  </div>
</section> 
---
import SkillsList from "../React/SkillsList.tsx";
import SystemFlowDiagram from "@/React/SystemFlowDiagram";
---

<section class="text-[var(--white)]" id="skills">
  <div class="max-w-5xl mx-auto space-y-8 py-8">
    <div class="flex flex-col lg:flex-row items-center gap-8">
      <SkillsList client:load />
      <div class="flex justify-center w-[300px] h-[300px] md:w-[400px] md:h-[400px] pt-3 md:pt-9 md:ml-16">
        <SystemFlowDiagram client:load
          nodeCount={15}
          backgroundColor="#101010"
          primaryColor="#A476FF"
          secondaryColor="#5e4491"
          pulseSpeed={0.005}
          connectionProbability={0.1}
          pulseSpawnRate={0.0005}
        />
      </div>
    </div>
  </div>
</section> 
---
// Platform icons/illustrations
const platforms = [
  {
    name: 'Microcontrollers',
    icon: '/svg/microcontroller.svg',
    description: 'STM32, ESP32, nRF52'
  },
  {
    name: 'Mobile',
    icon: '/svg/mobile.svg',
    description: 'iOS & Android'
  },
  {
    name: 'Windows',
    icon: '/svg/windows.svg',
    description: '.NET Windows Applications'
  },
  {
    name: 'Linux',
    icon: '/svg/linux.svg',
    description: 'Embedded and Desktop Linux'
  },
  {
    name: 'Web Frontend',
    icon: '/svg/web.svg',
    description: 'React, Astro, Blazor'
  },
  {
    name: 'Cloud',
    icon: '/svg/cloud.svg',
    description: 'AWS, GCP'
  }
];
---

<div class="w-full bg-[#1414149c] py-12 mt-12 border-y border-[var(--white-icon-tr)]">
  <div class="max-w-5xl mx-auto px-4">
    <h3 class="text-[var(--white)] text-3xl md:text-4xl font-semibold mb-8">Development Platforms</h3>
    
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
      {platforms.map(platform => (
        <div class="flex flex-col items-center group">
          <div class="bg-[#1414149c] p-4 rounded-2xl border border-[var(--white-icon-tr)] 
                      transition-all duration-300 hover:border-[var(--sec)] hover:scale-105
                      text-[var(--white-icon)] hover:text-[var(--sec)]">
            <img src={platform.icon} alt={platform.name} class="w-12 h-12" />
          </div>
          <span class="mt-3 text-[var(--white)] font-medium text-lg">{platform.name}</span>
          <span class="text-[var(--white-icon)] text-sm text-center">{platform.description}</span>
        </div>
      ))}
    </div>
  </div>
</div> 
---
import GradientBackground from '../React/GradientBackground';
import Analytics from '@vercel/analytics/astro';


interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Nick Montelibano - Software Engineer Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Add these SEO meta tags -->
    <meta name="description" content="Nick (Nicholas) Montelibano - Independent Software Consultant for Fractal Logic specializing in Medical Device Software Architecture and Engineering in Minnesota. Expert in Medical Systems Engineering and Software Leadership." />
    
    <!-- Keywords -->
    <meta name="keywords" content="Nick Montelibano, Nicholas Montelibano, Fractal Logic, Software Consulting Minnesota, Medical Device Software, Independent Software Consultant, Software Engineer, Medical Device Software Architecture, Medical Systems Engineer, Medical Device Software Leader, Software Contractor Minnesota" />
    
    <!-- Open Graph / Social Media -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Independent Medical Device Software Consultant in Minnesota - Nick Montelibano" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    
    <!-- Add canonical URL -->
    <link rel="canonical" href={Astro.url} />

    <!-- Preconnect to required origins -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" as="image" href="/webp/Profile_Photo_2023_Cropped.webp" />
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Nick Montelibano",
      "alternateName": "Nicholas Montelibano",
      "jobTitle": "Medical Device Software Consultant",
      "description": "Independent Software Consultant specializing in Medical Device Software Architecture and Engineering",
      "areaServed": "Minnesota",
      "knowsAbout": ["Medical Device Software", "Software Architecture", "Systems Engineering", "Software Consulting"],
      "worksFor": {
        "@type": "Organization",
        "name": "Fractal Logic"
      },
      "organization": {
        "@type": "Organization",
        "name": "Fractal Logic"
      }
    }
    </script>
    <script>
      import { inject } from "@vercel/analytics";
      inject()
  </script>
  </head>
  <body class="min-h-screen">
    <GradientBackground client:load />
    <main class="relative md:px-48 lg:px-20 px-9 bg-transparent">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap");

  :root {
    --background: transparent;
    --bg: transparent;

    --sec: #A476FF;

    --white: #dfdfdf;

    --white-icon: #f3f3f398;
    --white-icon-tr: #f3f3f310;

    --font: "montserrat", system-ui, sans-serif;
  }

  * {
    font-family: var(--font);
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }

  *::selection {
    background-color: var(--sec);
    color: var(--background);
  }

  /* Scrollbar styles */

  ::-webkit-scrollbar {
    width: 15px;
  }

  ::-webkit-scrollbar-track {
    background: var(--container);
    border-radius: 30px;
  }

  ::-webkit-scrollbar-thumb {
    background: var(--background);
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--pink);
  }

  /* Scrollbar styles for Firefox */
  * {
    scrollbar-width: thin;
    scrollbar-color: var(--line) var(--container);
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    position: relative;
    background-color: transparent;
  }
</style>